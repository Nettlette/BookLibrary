@page
@model BookLibrary.Pages.Book.IndexModel

@{
    ViewData["Title"] = "Index";
}
<script src="~/js/jquery/dist/jquery.js"></script>
<script src="~/bootstrap/dist/js/bootstrap.js"></script>
<link herf="~/bootstrap/dist/css/bootstrap.css" />
<script src="~/multiselect-dropdown.js"></script>
<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<div class="row">
    <form asp-action="Index" method="OnGetAsync">
        <div class="col-md-3">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="Author" class="control-label"></label>
            <input asp-for="Author" class="form-control" />
        </div>
        <div class="col-md-12">
            <h4>Published</h4>
        </div>
        <div class="col-md-3">
            <label asp-for="PublishStartDate" class="control-label"></label>
            <input asp-for="PublishStartDate" type="date" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="PublishEndDate" class="control-label"></label>
            <input asp-for="PublishEndDate" type="date" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="Locations" class="control-label"></label>
            <select asp-for="Locations" class="form-control" asp-items="@Model.LocationsList" multiple multiselect-search="true"></select>
        </div>
        <div class="col-md-3">
            <label asp-for="Subcategories" class="control-label"></label>
            <select asp-for="Subcategories" class="form-control" asp-items="@Model.SubcategoriesList" multiple multiselect-search="true"></select>
        </div>
        <div class="col-md-3">
            <label asp-for="Category" class="control-label"></label>
            <select asp-for="Category" class="form-control" asp-items="@Model.CategoryList"></select>
        </div>
        <div class="col-md-3">
            <label asp-for="Series" class="control-label"></label>
            <input asp-for="Series" class="form-control" />
        </div>
        <div class="col-md-6">
            <input type="submit" value="Search" class="btn btn-default" />
        </div>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Authors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Published)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Locations)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Subcategories)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Pages)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Hours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].SeriesName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Books) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title) <br />
                @Html.DisplayFor(modelItem => item.Subtitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Authors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Published)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Locations)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subcategories)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pages)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeriesDisplay)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.BookId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.BookId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.BookId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
