@page
@model BookLibrary.Pages.Challenge.EditModel

@{
    ViewData["Title"] = "Edit";
}
<script src="~/js/site.js"></script>
<link rel="stylesheet" href="~/bootstrap/dist/css/bootstrap.min.css" />
<h1>Challenge</h1>
<h4>Edit</h4>
<hr />
<form method="post">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Challenge.ChallengeId" />
            <div class="form-group">
                <label asp-for="Challenge.Name" class="control-label"></label>
                <input asp-for="Challenge.Name" class="form-control" />
                <span asp-validation-for="Challenge.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Challenge.Description" class="control-label"></label>
                <textarea asp-for="Challenge.Description" class="form-control" rows="4" cols="50">
                    @Model.Challenge.Description
                </textarea>
                <span asp-validation-for="Challenge.Description" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <h4>Elements</h4>
        <div class="col-md-12">
            <table id="ChallengeElementTable" class="table">
                <thead>
                    <th class="col-3">
                        @Html.DisplayNameFor(item => Model.ChallengeElements.First().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(item => Model.ChallengeElements.First().Description)
                    </th>
                    <th class="col-1">
                        @Html.DisplayNameFor(item => Model.ChallengeElements.First().Order)
                    </th>
                    <th class=col-1>
                        @Html.DisplayNameFor(item => Model.ChallengeElements.First().Count)
                    </th>
                    <th class="col-1"></th>
                </thead>
                <tbody>
                    @for(var i=0; i<Model.ChallengeElements.Count; i++)
                    {
                        <tr>
                            <td>
                                <input asp-for="ChallengeElements[i].ChallengeElementId" type="hidden">
                                <input asp-for="ChallengeElements[i].Name" class="form-control">
                            </td>
                            <td>
                                <input asp-for="ChallengeElements[i].Description" class="form-control">
                            </td>
                            <td>
                                <input asp-for="ChallengeElements[i].Order" class="form-control">
                            </td>
                            <td>
                                <input asp-for="ChallengeElements[i].Count" class="form-control">
                            </td>
                            <td><a class="btn btn-sm btn-danger removeTableRow">X</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a class="btn btn-outline-info" onclick="addTableRow('ChallengeElementTable', 'ChallengeElements', ['Name', 'Description', 'Order', 'Count'])">+ Challenge Element</a>
        </div>
        <div class="col-12 mt-3">
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
