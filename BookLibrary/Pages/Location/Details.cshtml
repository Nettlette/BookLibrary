@page
@model BookLibrary.Pages.Location.DetailsModel

@{
    ViewData["Title"] = "Location Details";
}
<div>
    <h1>Location</h1>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <dl>
                <dt class="col">
                    @Html.DisplayNameFor(model => model.Location.Name)
                </dt>
                <dd >
                    @Html.DisplayFor(model => model.Location.Name)
                </dd>
                <dt class="col">
                    @Html.DisplayNameFor(model => model.Location.LocationType)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Location.LocationType)
                </dd>
            </dl>
        </div>
        <div class="col-md-3">
            <h2>Books (@Model.Books.Count)</h2>
            <ul>
                @foreach (var b in Model.Books)
                {
                    <li>
                        <span>@Html.DisplayFor(model => b.Title)</span><br />
                        @if (b.SeriesName != null)
                        {
                            <span>@Html.DisplayFor(model => b.SeriesDisplay)</span><br />
                        }
                        @if (b.Published != null)
                        {
                            <span>Published @String.Format("{0:M/d/yyyy}", b.Published)</span><br />
                        }
                        @if (b.Category != null)
                        {
                            <span>@Html.DisplayFor(model => b.Category)</span><br />
                        }
                    </li>
                }
            </ul>
        </div>
        <div class="col-md-3">
            <h2>Authors</h2>
            <ul>
                @foreach (var a in Model.Authors)
                {
                    <li>
                        @Html.DisplayFor(model => a.AuthorName)
                    </li>
                }
            </ul>
        </div>
    </div>
    
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Location?.LocationID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
